@SET input aufcc110.xyz
@SET input_chg 0

&GLOBAL
  PROJECT aufcc110
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep

  &DFT
    CHARGE ${input_chg}
    MULTIPLICITY 1

    BASIS_SET_FILE_NAME  BASIS_MOLOPT
    POTENTIAL_FILE_NAME  GTH_POTENTIALS

    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-10
    &END QS

    &MGRID
      NGRIDS 5
      CUTOFF 280
      REL_CUTOFF 40
    &END MGRID

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL

    &vdW_POTENTIAL
      POTENTIAL_TYPE PAIR_POTENTIAL
      &PAIR_POTENTIAL
        TYPE DFTD3
        PARAMETER_FILE_NAME dftd3.dat
        REFERENCE_FUNCTIONAL PBE
        # CALCULATE_C9_TERM .TRUE.
        &PRINT_DFTD OFF
        &END
      &END PAIR_POTENTIAL
    &END vdW_POTENTIAL

      &XC_GRID
        XC_SMOOTH_RHO NN50
        XC_DERIV NN50_SMOOTH
      &END XC_GRID
    &END XC

    &POISSON
       PERIODIC XZ
       POISSON_SOLVER WAVELET
    &END

    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-6
      MAX_SCF 500
      ADDED_MOS 200
      CHOLESKY INVERSE

      &DIAGONALIZATION  ON
        ALGORITHM STANDARD
        #ALGORITHM DAVIDSON
      &END DIAGONALIZATION

      &MIXING  T
        METHOD BROYDEN_MIXING
        ALPHA 0.1
        BETA  1.5
        NBROYDEN 8
      &END MIXING

      &SMEAR
        ELECTRONIC_TEMPERATURE [K] 300
        METHOD FERMI_DIRAC
      &END SMEAR
      
      &PRINT
        &RESTART
          BACKUP_COPIES 1
        &END RESTART
      &END PRINT

    &END SCF

  &END DFT

  &SUBSYS

    &CELL
       ABC 24.480  22.885  17.310
       ALPHA_BETA_GAMMA 90.00  90.00 90.00
    &END CELL

    &TOPOLOGY
      &CENTER_COORDINATES
      &END
      COORD_FILE_NAME ${input}
      COORD_FILE_FORMAT XYZ   
    &END

    &KIND Au
      ELEMENT   Au
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q11
    &END KIND
    

  &END SUBSYS


&END FORCE_EVAL

